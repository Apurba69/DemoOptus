<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Wipro.OptusDemo.UIScreen.ScenarioTwoScreen"
    tools:showIn="@layout/scenario_two_screen">
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenario 2"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        />
    <TextView
        android:id="@+id/selectDestinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Destination:"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/headerText"
        android:layout_marginLeft="10dip"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/selectDestinationText"
        android:layout_marginTop="10dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/spiner_bg"
        />
    <ImageView
        android:id="@+id/spinerImage"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_below="@+id/selectDestinationText"
        android:layout_marginTop="10dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/down_arrow"
        android:background="@drawable/rectangle"
        />
    <TextView
        android:id="@+id/transportModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode of Transport:"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/spinerImage"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        />
    <TextView
        android:id="@+id/carText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car: 80 Mins"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/transportModeText"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        />
    <TextView
        android:id="@+id/trainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train: 120 Mins"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/carText"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        />
    <Button
        android:id="@+id/navigateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAVIGATE"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="5dip"
        />
</RelativeLayout>
</layout>